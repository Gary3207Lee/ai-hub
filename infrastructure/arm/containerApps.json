{
    "$schema": "https://schema.management.azure.com/schemas/2018-05-01/subscriptionDeploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "rgName": {
            "type": "string",
            "metadata": {
                "description": "Select the naming convertion for the resource group that will be created"
            }
        },
        "location": {
            "type": "string",
            "metadata": {
                "description": "Provide the Azure region for the storage accont"
            }
        },
        "prefix": {
            "type": "string",
            "metadata": {
                "description": "Provide a prefix for the resources that will be created as part of the storage account"
            }
        },
        "acaSubnetId": {
            "type": "string",
            "defaultValue": ""
        },
        "acaDisableNetworkAccess": {
            "type": "string",
            "defaultValue": "No",
            "allowedValues": [
                "Yes",
                "No"
            ]
        },
        "acaNwLocation": {
            "type": "string",
            "defaultValue": "[parameters('location')]"
        },
        "acaMonCreation": {
            "type": "string",
            "defaultValue": "No",
            "allowedValues": [
                "Yes",
                "No"
            ]
        },
        "acaworkloadprofile": {
            "type": "string",
            "defaultValue": "Consumption"
        },
        "acaZone":{
            "type": "string",
            "defaultValue": "Disabled",
            "allowedValues": [
                "Enabled",
                "Disabled"
            ],
            "metadata": {
                "description": "ACA zone redundancy setup"
            }
        },
        "azMonWorkspaceName":{
            "type": "string",
            "defaultValue": ""
        },
        "acaworkspaceCustomerId":{
            "type": "string",
            "defaultValue": ""
        },
        "acasharedKey":{
            "type": "string",
            "defaultValue": ""
        }
    },
    "variables": {
        "name-compliant-aca": "[toLower(take(concat(replace(replace(parameters('prefix'), '-', ''), '_', ''), parameters('location'), uniqueString(deployment().name)), 23))]",
        "name-compliant-azMon": "[concat(parameters('prefix'), '-', parameters('location'), '-azmon')]",
        "name-compliant-acame": "[take(concat(parameters('prefix'), '-', parameters('location'), '-acame'), 23)]"
    },
    "resources": [
        {
            "type": "Microsoft.Resources/resourceGroups",
            "apiVersion": "2022-09-01",
            "location": "[parameters('location')]",
            "name": "[parameters('rgName')]",
            "properties": {}
        },
        {
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2022-09-01",
            "name": "aca-deployment",
            "resourceGroup": "[parameters('rgName')]",
            "dependsOn": [
                "[resourceId('Microsoft.Resources/resourceGroups/', parameters('rgName'))]"
            ],
            "properties": {
                "mode": "Incremental",
                "template": {
                    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
                    "contentVersion": "1.0.0.0",
                    "parameters": {},
                    "resources": [
                        {
                            "type": "Microsoft.App/managedEnvironments",
                            "apiVersion": "2023-11-02-preview",
                            "name": "[variables('name-compliant-acame')]",
                            "location": "[parameters('location')]",
                            "properties": {
                              "appLogsConfiguration": {
                                "destination": "log-analytics",
                                "logAnalyticsConfiguration": {
                                  "customerId": "[reference(concat(subscription().id, '/resourceGroups/', parameters('rgName'), '/providers/Microsoft.OperationalInsights/workspaces/', variables('name-compliant-azMon')), '2021-12-01-preview').customerId]",
                                  "sharedKey": "[reference(concat(subscription().id, '/resourceGroups/', parameters('rgName'), '/providers/Microsoft.OperationalInsights/workspaces/', variables('name-compliant-azMon')), '2021-12-01-preview').primarySharedKey]"
                                }
                              },
                              "workloadProfiles": [
                                {
                                    "name": "Consumption",
                                    "workloadProfileType": "Consumption"
                                }
                            ],
                              "vnetConfiguration": {
                                "internal": false,
                                "infrastructureSubnetId": "[parameters('acaSubnetId')]"
                              },
                              "zoneRedundant": false
                            }
                        }
                        
                    ]
                }
            }
        }
    ]
}