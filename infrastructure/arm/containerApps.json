{
    "$schema": "https://schema.management.azure.com/schemas/2018-05-01/subscriptionDeploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "rgName": {
            "type": "string",
            "metadata": {
                "description": "Select the naming convertion for the resource group that will be created"
            }
        },
        "location": {
            "type": "string",
            "metadata": {
                "description": "Provide the Azure region for the storage accont"
            }
        },
        "prefix": {
            "type": "string",
            "metadata": {
                "description": "Provide a prefix for the resources that will be created as part of the storage account"
            }
        },
        "acaSubnetId": {
            "type": "string",
            "defaultValue": ""
        },
        "acaDisableNetworkAccess": {
            "type": "string",
            "defaultValue": "No",
            "allowedValues": [
                "Yes",
                "No"
            ]
        },
        "acaNwLocation": {
            "type": "string",
            "defaultValue": "[parameters('location')]"
        },
        "acaMonCreation": {
            "type": "string",
            "defaultValue": "No",
            "allowedValues": [
                "Yes",
                "No"
            ]
        },
        "acaworkloadprofile": {
            "type": "string",
            "defaultValue": "Consumption"
        },
        "acaZone":{
            "type": "string",
            "defaultValue": "diabled",
            "allowedValues": [
                "Enabled",
                "Disabled"
            ],
            "metadata": {
                "description": "ACA zone redundancy setup"
            }
        },
        "azMonWorkspaceName":{
            "type": "string",
            "defaultValue": ""
        },
        "acaworkspaceId":{
            "type": "string",
            "defaultValue": ""
        },
        "acasharedKey":{
            "type": "string",
            "defaultValue": ""
        }
    },
    "variables": {
        "name-compliant-aca": "[toLower(take(concat(replace(replace(parameters('prefix'), '-', ''), '_', ''), parameters('location'), uniqueString(deployment().name)), 23))]",
        "name-compliant-azMon": "[concat(parameters('prefix'), '-', parameters('location'), '-azmon')]",
        "name-compliant-acame": "[take(concat(parameters('prefix'), '-', parameters('location'), '-acame'), 23)]"
    },
    "resources": [
        {
            "type": "Microsoft.Resources/resourceGroups",
            "apiVersion": "2022-09-01",
            "location": "[parameters('location')]",
            "name": "[parameters('rgName')]",
            "properties": {}
        },
        {
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2022-09-01",
            "name": "aca-deployment",
            "resourceGroup": "[parameters('rgName')]",
            "dependsOn": [
                "[resourceId('Microsoft.Resources/resourceGroups/', parameters('rgName'))]"
            ],
            "properties": {
                "mode": "Incremental",
                "template": {
                    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
                    "contentVersion": "1.0.0.0",
                    "parameters": {},
                    "resources": [
                        {
                            "condition": "[and(equals(parameters('acaDisableNetworkAccess'), 'Yes'), not(empty(parameters('acaSubnetId'))), equals(parameters('acaZone'), 'Enabled'))]",
                            "type": "Microsoft.App/managedEnvironments",
                            "apiVersion": "2024-03-01",
                            "name": "[variables('name-compliant-acame')]",
                            "location": "[parameters('location')]",
                            "properties": {
                              "appLogsConfiguration": {
                                "destination": "log-analytics",
                                "logAnalyticsConfiguration": {
                                  "customerId": "[parameters('acaworkspaceId')]",
                                  "sharedKey": "[parameters('acasharedKey')]"
                                }
                              },
                              "workloadProfiles": [
                                {
                                    "name": "Consumption",
                                    "workloadProfileType": "Consumption"
                                }
                            ],
                              "vnetConfiguration": {
                                "internal": false,
                                "infrastructureSubnetId": "[parameters('acaSubnetId')]"
                              }
                            },
                            "dependsOn": [
                              "[resourceId('Microsoft.OperationalInsights/workspaces', variables('name-compliant-azMon'))]"
                            ]
                        },
                        {
                            "type": "Microsoft.App/containerapps",
                            "apiVersion": "2024-02-02-preview",
                            "name": "[parameters('name-compliant-aca')]",
                            "location": "[parameters('location')]",
                            "dependsOn": [
                                "[concat('Microsoft.App/managedEnvironments/', parameters('name-compliant-acame'))]"
                            ],
                            "tags": {
                                "Env": "Demo"
                            },
                            "kind": "containerapps",
                            "properties": {
                                "environmentId": "[resourceId('Microsoft.App/managedEnvironments', variables('name-compliant-acame'))]",
                                "configuration": {
                                    "secrets": null,
                                    "registries": null,
                                    "activeRevisionsMode": "Single",
                                    "ingress": {
                                        "external": true,
                                        "targetPort": 80,
                                        "exposedPort": 0,
                                        "transport": "Auto",
                                        "traffic": [
                                            {
                                                "weight": 100,
                                                "latestRevision": true
                                            }
                                        ],
                                        "customDomains": null,
                                        "allowInsecure": false,
                                        "ipSecurityRestrictions": null,
                                        "corsPolicy": null,
                                        "clientCertificateMode": null,
                                        "stickySessions": null,
                                        "additionalPortMappings": null,
                                        "targetPortHttpScheme": null
                                    }
                                },
                                "template": {
                                    "containers": [
                                        {
                                            "image": "mcr.microsoft.com/k8se/quickstart:latest",
                                            "imageType": "ContainerImage",
                                            "name": "simple-hello-world-container",
                                            "resources": {
                                                "cpu": 0.25,
                                                "memory": "0.5Gi",
                                                "ephemeralStorage": "1Gi"
                                            }
                                        }
                                    ],
                                    "scale": {
                                        "minReplicas": 1,
                                        "maxReplicas": 3
                                    }
                                },
                                "workloadProfileName": "Consumption"
                            }
                        }
                    ]
                }
            }
        }
    ]
}